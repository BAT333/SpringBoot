NA CLASS SECURITYcONFIGURANTIONS
@Bean
    public AuthenticationManager manager (AuthenticationConfiguration configuration){
        try {
            return configuration.getAuthenticationManager();
        } catch (Exception e) {
            throw new RuntimeException(e);
        }

    }
